@page
@{
    // Page title
    ViewData["Title"] = "Razor";

    // Array with courses
    string[] courses = { "DT057G, Webbutveckling I", "DT084G, Introduktion till programmering med JavaScript", "DT163G, Digital bildbehandling för webb", "GD008G, Typografi och form för webb", "DT003G, Databaser", "DT093G, Webbutveckling II", "DT068G, Webbanvändbarhet", "DT152G, Webbdesign för CMS", "DT173G, Webbutveckling III", "IK060G, Projektledning" };

    // Today's day of the week
    var today = DateTime.Now.DayOfWeek.ToString().ToLower();

}
<!-- Output page title -->
<h1>@ViewData["Title"]</h1>

<!-- Display list of courses -->
<h2>Ett urval av lästa kurser:</h2>
<ul>
    @foreach(var course in courses)
    {
        <li>@course</li>
    }
</ul>

<!-- Today's date -->
<p><b>Dagens datum: </b> @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</p>

<!-- Check if today is monday, using variable from top of page -->
@if(today == "monday")
{
    <p>Idag är det måndag!</p>
} else
{
    <p>Idag är det inte måndag...</p>
}